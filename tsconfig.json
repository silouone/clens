{
  "compilerOptions": {
    "strict": true,
    "target": "ES2023",
    "module": "ES2022",
    "lib": ["ES2023"],
    "moduleResolution": "bundler",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "types": ["bun-types"]
  },
  "include": ["src/**/*"]
}
